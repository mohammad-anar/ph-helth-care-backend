{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["prisma/src/generated"]
    },
    "target": "ES2020",
    "module": "Node16", // must match moduleResolution
    "moduleResolution": "Node16", // updated
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true, // optional if you import JSON
    "ignoreDeprecations": "6.0" // optional
  },
  "include": ["src/**/*.ts", "generated/prisma", "prisma.config.ts"],
  "exclude": ["dist"]
}
